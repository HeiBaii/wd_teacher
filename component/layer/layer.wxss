.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
left:0;top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 70%;
  height: 400rpx;
  overflow: hidden;
  position: fixed;
  top: 26%;
  left: 15%;
  z-index: 99999;
  background: white;
  border-radius: 20rpx;
}
 
.title {
  margin-top: 40rpx;
  text-align: center;
  background-color: gazure;
}
 
.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
 
.btn {
  width: 100%;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1px solid #e1e1e1;
}
 
.cancel {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  color: red;
}
 
.Sure {
  width: 100%;
  padding: 20rpx;
  /* background-color: gainsboro; */
  text-align: center;
  color: #507af2;
  font-size: 34rpx;
}
 
.modalMsg {
  text-align: center;
  margin-top: 16rpx;
  display: inline-block;
  width: 100%;
  font-size: 34rpx;
}

.modalTips{
  font-size: 26rpx;
  color: #999999;
}