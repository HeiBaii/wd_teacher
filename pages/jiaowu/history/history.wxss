@import "../../../wxss/common.wxss";

page {
  background: #f6f8fa;
}

.cour-date {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #999;
}

.search {
  margin-top: 20rpx;
}

.today-cour {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70% !important;
}

.school-addr, .ident-select {
  /* width: 50%; */
  height: 52rpx;
  color: #999;
  line-height: 52rpx;
  padding-left: 130rpx;
  /* border-right: 1rpx solid #e1e1e1; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.school-addr image {
  margin-top: 6rpx;
}

.txt-area {
  /* max-width: 80%; */
  height: 52rpx;
  overflow: hidden;
}

.ident-select {
  border-right: none;
  padding-left: 0rpx;
}

.ident-txt {
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.shadow-ident-container {
  background: #fff;
  position: relative;
}

.ident-line {
  width: 720rpx;
  margin-left: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #e1e1e1;
}

.common-course-xq text {
  display: inline-block;
  width: 100%;
}

.ident-name {
  width: 22%;
  text-align: right;
}

.ident-name text {
  display: inline-block;
  width: 100%;
  text-align: right;
  box-sizing: border-box;
}

.info-name {
  font-size: 30rpx;
  font-weight: bold;
}

.ident-teach {
  color: #1fc81a;
  line-height: 60rpx;
}

.ident-stu {
  color: #ff8b2d;
  line-height: 60rpx;
}

.common-top {
  margin-top: 88rpx;
  padding-top: 10rpx;
}

.send-campus {
  height: 52rpx;
  line-height: 52rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin: auto;
}

.send-campus .txt-area {
  max-width: 100%;
}

.send-dot {
  background: #40b7fd;
}

.common-c-course {
  width: 78%;
}

.send-book {
  width: 100%;
  background: #f6f8fa;
  padding: 20rpx;
  margin-top: 10rpx;
  line-height: 44rpx;
}

.send-next {
  width: 14%;
  display: flex;
  align-items: center;
  text-justify: end;
}

.ident-name image {
  width: 19rpx;
  height: 29rpx;
  margin-left: 86%;
}

