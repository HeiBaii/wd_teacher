.screen {
  width: 150rpx;
  height: 100%;
  line-height: 88rpx;
  margin-left: 30rpx;
}

.screen view {
  float: left;
  color: #999;
}

.screenImage {
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-top: 33rpx;
  margin-right: 43rpx;
}

.picker {
  border-right: 1rpx solid #e1e1e1;
  padding-right: 25rpx;
}

