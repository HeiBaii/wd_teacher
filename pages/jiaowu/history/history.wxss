.modelBox {
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.1);
  margin-top: -88rpx;
  z-index: 9999;
  padding-bottom: 88rpx;
}

.modelBoxText {
  width: 70%;
  height: 100%;
  background-color: #fff;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 999999;
  padding-bottom: 88rpx;
  box-sizing: border-box;
}

.indentity {
  width: 100%;
  height: 200rpx;
  margin-top: 80rpx;
  text-align: center;
}

.indentity button {
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.bottomBotton {
  margin-top: 200rpx;
}

.other-button-hover {
  background-color: red;
}

.reset {
  border: 1rpx solid #999;
  width: 160rpx;
  height: 80rpx;
  border-radius: 10rpx;
  line-height: 80rpx;
  /* background-color: #40b7fd; */
  font-size: 32rpx;
  display: inline-block;
  margin-left: 10rpx;
  box-sizing: border-box;
}

.bluetop {
  border: 1rpx solid #40b7fd !important;
  background-color: #40b7fd !important;
}

.bottonText {
  margin-bottom: 20rpx;
}

.bottonColorBlue {
  background-color: #40b7fd;
}

.leftview {
  width: 30%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  position: fixed;
  left: 0;
  right: 0;
  z-index: 999999;
  padding-bottom: 88rpx;
}

.select_color {
  color: #1fc81a !important;
}

.content {
  width: 100%;
  /* height:230rpx; */
  background-color: #fff;
  line-height: 50rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: none;
  color: #999;
  padding-top: 30rpx;
  /* border-top:1rpx solid #999; */
  border-bottom: 1rpx solid #999;
  padding-bottom: 10rpx;
}

.className {
  font-size: 32rpx;
}

.content>view {
  display: inline-block;
}

.classTime >view {
  display: inline-block;
}

.classTime image {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 6rpx;
  /* vertical-align: center; */
}

.classAdress > view {
  display: inline-block;
}

.classAdress image {
  width: 20rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 6rpx;
}

.contentLeft {
  width: 100%;
  overflow: hidden;
}
.classDetail{
  vertical-align: center
}

.classDetail view {
  display: inline-block;
  margin-right: 30rpx;
}

.classDetailNumber .classDetailsignIn .classDetailsignOut {
  margin-right: 6rpx;
}

.contentRight {
  float: right;
  line-height: 200rpx;
  margin-right: 30rpx;
}

.classDetailNumberOne {
  margin-right: 6rpx !important;
}

.classDetailsignInOne {
  margin-right: 6rpx !important;
}

.classDetailsignOutOne {
  margin-right: 6rpx !important;
}

.contentImage {
  width: 30rpx;
  height: 30rpx;
  float:right;
  margin-right:66rpx;
  vertical-align: bottom;
  padding-top:8rpx;
box-shadow:border-box;
}
