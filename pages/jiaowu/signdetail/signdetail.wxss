@import "../../../wxss/common.wxss";

page {
  background: #f6f8fa;
}

.course_name {
  background-color: #fff;
  width: 100%;
  height:80rpx;
  line-height: 80rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 900;
  /* padding-top: 30rpx;
  padding-bottom: 30rpx; */
  padding-left: 30rpx;
  box-sizing: border-box;
  overflow: hidden
}

.table_title {
  height: 80rpx;
  width: 100%;
  text-align: left;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  border-top: 2rpx solid #ccc;
  
}

.table_title>view {
  display: inline-block;
  width: 33%;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.table_title image {
  width: 15rpx;
  height: 15rpx;
}

.table_content {
  position: relative;
}

.content {
  /* height:80rpx; */
  width: 100%;
  text-align: left;
  /* line-height: 80rpx; */
  box-sizing: border-box;
  font-size: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
}

.content view {
  /* display:inline-block; */
  width: 33%;
  height: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
  float: left;
  /* margin-right:50rpx; */
}

.contentTime {
  font-size: 23rpx;
}

.nameFilter {
  width: 100%;
  height: 100%;
  background-color: #ccc !important;
  position: absolute;
  left: 0;
  top: 216rpx;
  box-sizing: border-box;
}

.filter {
  background-color: #fff;
}

.filter view {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.numberFiler {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ccc;
  color: #ccc;
}

.search_c {
  font-size: 30rpx;
  box-sizing: border-box;
}

.c_1{
  color:#1fc81a
}

.c_2{
  color:#FFA500
}
.table{
  box-sizing: border-box;
  position:relative;
  height:100%;
}


