<!--index.wxml-->
<view class="container">
  <view class='bg'>
    <image src='../../../images/bg@2x.png' ></image>
  </view>
  <view class='self-info' bindtap='bindTeach'>
    <view class='tea_pic'>
      <image src='{{teacher}}'  mode='aspectFit'></image>
    </view>
    <view class='tea-name'>
      {{name}}<text>\n教师</text>
    </view>
  </view>
